<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E0E0E0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mejorandome.mejorandome.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/change_pass_option"
                android:background="@drawable/accent_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="Cambiar Contraseña" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/change_pass_layout"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="10dp"
                    android:shadowColor="#fff"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/password1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Contraseña Actual"
                    android:inputType="textPassword" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle_edittext"
                    android:id="@+id/password2"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Nueva Contraseña"
                    android:inputType="textPassword" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/change_pass_message"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Contraseña cambiada con exito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/change_pass_button"
                    android:background="@drawable/green_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Cambiar Contraseña" />

            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/red_apoyo"
                android:background="@drawable/accent_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="Red de Apoyo" />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/images_button"
                android:background="@drawable/accent_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="Lista de Imagenes" />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/logout_button"
                android:background="@drawable/accent_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="Cerrar Sesión" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
