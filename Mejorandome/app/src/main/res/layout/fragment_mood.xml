<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mejorandome.mejorandome.MoodFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="460dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Alegría"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_1"
                    rsv:filledColor="@color/color_green"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Paz Interior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_2"
                    rsv:filledColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Satisfacción Personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_3"
                    rsv:filledColor="#FFD700"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Angustia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_4"
                    rsv:filledColor="@color/color_red"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Miedo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_5"
                    rsv:filledColor="#F37506"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="Ansiedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mejorandome.mejorandome.SeekBarClasses.RangeSliderView
                    android:id="@+id/seekbar_6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <EditText
                    android:layout_marginTop="30dp"
                    style="@style/EditText"
                    android:id="@+id/peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:textColor="@color/colorAccent"
                    android:hint="Peso Kg"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:text="¿Tomaste tus medicmentos hoy?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:layout_marginLeft="10dp"
                        android:id="@+id/medicineCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <Button
            android:background="@drawable/button"
            android:id="@+id/save_mood_button"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Guardar" />

    </LinearLayout>

</FrameLayout>
