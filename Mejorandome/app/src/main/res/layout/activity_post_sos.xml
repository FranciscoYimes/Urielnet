<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_post_sos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mejorandome.mejorandome.PostSOSActivity">

    <LinearLayout
        android:background="@drawable/fondo_alerta"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <TextView
            android:layout_marginTop="60dp"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:text="¡Mensaje Enviado!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="90dp"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="Hemos enviado un mensaje a tus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="contactos cercanos."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Queremos que recuerdes cuáles son"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="son tus objetivos, y por qué estás aquí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/objetivos_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/objetivo_example"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/objetivo_text_example"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="Quiero compartir más con mis hijos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/image2"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/image3"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/image4"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="150dp" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
