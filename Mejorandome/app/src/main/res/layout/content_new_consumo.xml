<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_consumo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mejorandome.mejorandome.NewConsumoActivity"
    tools:showIn="@layout/activity_new_consumo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="Sustancia"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_spinner_background"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="¿Qué cantidad?"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/cantidad_consumo"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="10"
                    android:inputType="number" />


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="Fecha:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/day"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="15"
                    android:inputType="datetime" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/month"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="07"
                    android:inputType="datetime" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/year"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="2017"
                    android:inputType="datetime" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/hour"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="11"
                    android:inputType="time" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/minute"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="00"
                    android:inputType="time" />

                <Spinner
                    android:id="@+id/am_pm_spinner"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_spinner_background"
                    android:spinnerMode="dropdown"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="¿Con quién consumiste?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/compania"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Amigos..."
                    android:inputType="text" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="¿Cómo obtuviste la sustancia?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/obtencion"
                    android:background="@drawable/circle_edittext"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#757b80"
                    android:textAlignment="center"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="Con un amigo..."
                    android:inputType="text" />

            </LinearLayout>

            <Button
                android:layout_marginBottom="120dp"
                android:textColor="#fff"
                android:id="@+id/save_consumo_button"
                android:text="Guardar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
